<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/text_view_correct"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0/0"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/text_view_number_of_questions"/>


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:id="@+id/image_view"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text="button 1"
        android:id="@+id/first_button"
        android:background="#DFE19A"
        android:layout_weight="1"
        android:textSize="20dp"
        android:onClick="answerClick"
        android:tag="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill"
        android:text="button 2"
        android:id="@+id/second_button"
        android:background="#A1E19A"
        android:textSize="20dp"
        android:onClick="answerClick"
        android:tag="2"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill"
        android:text="button 2"
        android:id="@+id/third_button"
        android:background="#7898EF"
        android:textSize="20dp"
        android:onClick="answerClick"
        android:tag="3"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill"
        android:text="button 3"
        android:id="@+id/fourth_button"
        android:background="#D55396"
        android:textSize="20dp"
        android:onClick="answerClick"
        android:tag="4"
        />



</LinearLayout>